# i3 config - By HUDSON ALBUQUERQUE
# Mod key (Mod1=Alt, Mod4=Super/Windows)
set $mod Mod4

# Font
font pango:JetBrainsMono Nerd Font 8

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"

# Iniciar Polybar
exec_always --no-startup-id ~/.config/i3/polybar/launch.sh

# Aplicativos no startup
exec --no-startup-id picom
exec --no-startup-id dunst
exec --no-startup-id nitrogen --restore
exec --no-startup-id nm-applet

# Controle de Volume
bindsym $mod+Page_Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && notify-send "ðŸ”Š Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | grep -oP '\d+%' | head -1)"
bindsym $mod+Page_Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && notify-send "ðŸ”‰ Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | grep -oP '\d+%' | head -1)"
bindsym $mod+m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && notify-send "ðŸ”‡ Mudo"

# Atalhos para workspaces
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8

# Mover janelas para workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8

# Atribuir aplicativos aos workspaces
assign [class="kitty|Alacritty|URxvt|terminator"] $ws1
assign [class="firefox|Chromium|Google-chrome|Brave-browser"] $ws2
assign [class="Thunar|Caja|Pcmanfm|nautilus|dolphin"] $ws3
assign [class="Geany|code|Code|xed"] $ws4
assign [class="libreoffice|Evince|Zathura|okular"] $ws5
assign [class="discord|Slack|whatsapp|TelegramDesktop"] $ws6
assign [class="vlc|mpv|spotify|rhythmbox|pyradio"] $ws7
assign [class="Lxappearance|Pavucontrol|qt5ct"] $ws8

# Atalhos bÃ¡sicos
bindsym $mod+Return exec kitty
bindsym $mod+d exec rofi -show drun -show-icons
bindsym $mod+x exec --no-startup-id dmenu_run -b -p "Run: " -nb 'black' -nf 'green' -sf 'blue' -sb 'white' -fn 'Sans-10' 
#bindsym $mod+Shift+q kill
bindsym $mod+q kill

#captura de tela
bindsym Print exec scrot ~/Imagens/$(date +%Y-%m-%d_%H-%M-%S).png
bindsym Shift+Print exec scrot -u ~/Imagens/$(date +%Y-%m-%d_%H-%M-%S).png
bindsym Ctrl+Print exec --no-startup-id ~/.config/i3/slop-scrot.sh

# Alternar entre tiling e floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Segurar as janelas em modo floating
floating_modifier $mod

# Mudar foco
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Mover janelas
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Layouts
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Reload/Restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# SAIR DA SESSÃƒO DO I3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Resize mode
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
 
    # Ajustar gaps
    bindsym $mod+Shift+equal gaps inner current plus 5
    bindsym $mod+Shift+minus gaps inner current minus 5
    bindsym $mod+Shift+g gaps inner current set 0
    
}
bindsym $mod+r mode "resize"

# Cores das janelas (Catppuccin Mocha)
client.focused          #89b4fa #1e1e2e #cdd6f4 #89b4fa #89b4fa
client.focused_inactive #313244 #1e1e2e #cdd6f4 #313244 #313244
client.unfocused        #313244 #1e1e2e #6c7086 #313244 #313244
client.urgent           #f38ba8 #1e1e2e #f38ba8 #f38ba8 #f38ba8

# Gaps
gaps inner 10
gaps outer 5

# Bordas
for_window [class=".*"] border pixel 2

# Floating para certos aplicativos
for_window [class="Pavucontrol"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Nm-connection-editor"] floating enable

# Reduz tamanho de janelas ao entrarem em floating
for_window [floating] resize set 790 590
